---
import { getCollection } from "astro:content";
import Article from "@components/Article.astro";
import TourLayout from "src/layouts/TourLayout.astro";

const pacayaSamiria = await getCollection("pacayaSamiria");
---

<TourLayout sectionName="Pacaya Samiria">
  <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      pacayaSamiria.map((tour) => (
        <li
          class="border-extra-soft-white text-soft-white hover:bg-soft-light rounded-xl border transition-colors duration-200"
          transition:name={tour.id}
        >
          <a href={`/tours-pacaya-samiria/${tour.slug}`}>
            <Article {...tour.data}>
              <h4 class="text-3xl font-bold">{tour.data.title}</h4>
            </Article>
          </a>
        </li>
      ))
    }
  </ul>
</TourLayout>

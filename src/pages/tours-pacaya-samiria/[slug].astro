---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import TourItemLayout from "src/layouts/TourItemLayout.astro";

export const getStaticPaths = (async () => {
  const tours = await getCollection("pacayaSamiria");
  return tours.map((tour) => ({
    params: {
      slug: tour.slug,
    },
    props: tour,
  }));
}) satisfies GetStaticPaths;

const tour = Astro.props;

const image = {
  path: "/src/images/breadcrumb/bg-pacayasamiria.png",
  alt: "Iquitos Expedition - Tours Pacaya Samiria",
  style: "object-position: 50% 28%",
};
---

<TourItemLayout
  image={image}
  sectionName="Pacaya Samiria"
  tour={tour}
  recommendedTours={tour.data.recommendedTours}
/>

---
import Breadcrumb from "@components/Breadcrumb.astro";
import ContactItem from "@components/ContactItem.astro";
import Layout from "src/layouts/Layout.astro";
import { contactItems } from "src/constans";
---

<Layout>
  <Breadcrumb title="Contáctenos" />

  <section class="bg-[rgb(248,249,250,.5)]" id="contact">
    <div class="py-52 px-6 max-w-7xl mx-auto">
      <h2 class="text-4xl font-semibold text-center">Contáctenos</h2>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-8 py-8">
        <div class="space-y-8 md:col-span-2">
          {contactItems.map((item) => <ContactItem {...item} />)}
        </div>
      </div>
    </div>
  </section>
</Layout>

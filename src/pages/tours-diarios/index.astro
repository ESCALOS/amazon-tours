---
import { getCollection } from "astro:content";
import Article from "@components/Article.astro";
import TourLayout from "src/layouts/TourLayout.astro";

const dailyTours = await getCollection("dailyTours");
---

<TourLayout>
  <ul class="space-y-8">
    {
      dailyTours.map((tour) => (
        <li class="border-extra-soft-white text-soft-white hover:bg-soft-light rounded-xl border transition-colors duration-200">
          <div transition:name={tour.id}>
            <a href={`/tours-diarios/${tour.slug}`}>
              <Article {...tour.data} />
            </a>
          </div>
        </li>
      ))
    }
  </ul>
</TourLayout>

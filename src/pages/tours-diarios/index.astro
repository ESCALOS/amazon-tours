---
import { getCollection } from "astro:content";
import Article from "@components/Article.astro";
import TourLayout from "src/layouts/TourLayout.astro";

const dailyTours = await getCollection("dailyTours");
---

<TourLayout>
  <ul class="space-y-8">
    {
      dailyTours.map((tour) => (
        <li class="border-extra-soft-white text-soft-white hover:bg-soft-light rounded-xl border transition-colors duration-200">
          <Article {...tour.data} slug={tour.slug} />
        </li>
      ))
    }
  </ul>
</TourLayout>

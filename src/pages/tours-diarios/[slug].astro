---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import TourItemLayout from "src/layouts/TourItemLayout.astro";

export const getStaticPaths = (async () => {
  const tours = await getCollection("dailyTours");
  return tours.map((tour) => ({
    params: {
      slug: tour.slug,
    },
    props: tour,
  }));
}) satisfies GetStaticPaths;

const tour = Astro.props;

const image = {
  path: "/src/images/breadcrumb/bg-tourdiario.png",
  alt: "Iquitos Expedition - Tours diarios Iquitos - Amazonas",
  style: "object-position: 50% 63%",
};
---

<TourItemLayout image={image} sectionName="Tours diarios" tour={tour} />

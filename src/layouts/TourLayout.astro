---
import Breadcrumb from "@components/Breadcrumb.astro";
import Layout from "src/layouts/Layout.astro";

interface Props {
  image: {
    path: string;
    alt: string;
    style: string;
  };
  sectionName: string;
}

const { sectionName, image } = Astro.props;
---

<Layout>
  <Breadcrumb image={image} title={sectionName} />
  <section class="bg-white my-12">
    <div class="max-w-7xl mx-auto px-6 space-y-6">
      <slot />
    </div>
  </section>
</Layout>

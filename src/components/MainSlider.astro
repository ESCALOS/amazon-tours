---
import MainSliderItem from "./MainSliderItem.astro";
import { mainSlides } from "src/constans";
---

<swiper-container
  class="h-screen min-[2560px]:h-[70rem] w-full"
  loop="true"
  pagination="true"
  pagination-clickable="true"
  autoplay-delay="2500"
>
  {
    mainSlides.map((title, index) => (
      <MainSliderItem
        title={title}
        imagePath={`/src/images/slide/${index + 1}.png`}
      />
    ))
  }
</swiper-container>

<script>
  import { register } from "swiper/element/bundle";

  register();
</script>

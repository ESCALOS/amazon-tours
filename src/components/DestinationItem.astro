---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
  imagePath: string;
  altText: string;
  imgClass?: string;
  containerTextClass?: string;
  title?: string;
  titleClass?: string;
  description: string;
}
const {
  imagePath,
  altText,
  imgClass = "",
  containerTextClass = "bottom-8 -translate-y-1/2 left-4",
  title = "Sin t√≠tulo",
  titleClass = "text-lg",
  description,
} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/card/*.jpg"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/images/card/*.jpg"`
  );
---

<div class="relative">
  <Image
    src={images[imagePath]()}
    alt={altText}
    class:list={["w-full h-full object-cover", imgClass]}
    loading="eager"
  />
  <div class:list={["absolute z-30", containerTextClass]}>
    <h5 class:list={["uppercase font-bold text-white", titleClass]}>
      {title}
    </h5>
    <p class="text-sm lg:text-base text-white pt-4">
      {description}
    </p>
  </div>
</div>

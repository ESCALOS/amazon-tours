<style>
  .loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .loader {
    width: 150px;
    height: 150px;
    border: 20px solid #f3f3f3; /* Color del borde */
    border-top: 20px solid #e42c02; /* Color del borde superior */
    border-radius: 50%; /* Hace que el borde sea circular */
    animation: spin 1s linear infinite; /* Animaci√≥n infinita */
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg); /* Empieza desde 0 grados */
    }
    100% {
      transform: rotate(360deg); /* Gira 360 grados */
    }
  }
</style>
<div class="loading-overlay bg-primary-500">
  <div class="loader"></div>
</div>

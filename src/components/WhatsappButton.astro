---
import { Icon } from "astro-icon/components";

interface Props {
  iconSize?: number;
  bgColor?: string;
  padding?: string;
  textColor?: string;
  textSize?: string;
}

const {
  iconSize = 24,
  bgColor = "bg-secondary-500",
  padding = "px-12 py-4",
  textColor = "text-white hover:text-primary-500",
  textSize = "lg:text-lg",
} = Astro.props;
---

<a
  target="_blank"
  href={import.meta.env.PUBLIC_WHATSAPP_LINK}
  class:list={[
    "inline-flex items-center justify-center border-2 border-white hover:border-primary-500 font-bold hover:bg-white rounded-md",
    bgColor,
    textColor,
    textSize,
    padding,
  ]}
  aria-label="Contacto de WhatsApp"
>
  Consultar ahora
  <Icon name="whatsapp" size={iconSize} class="ml-2" />
</a>

---
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";
type Props = CollectionEntry<"dailyTours">["data"];
const { heroImage, title } = Astro.props;
---

<article>
  <Image
    src={heroImage}
    alt={title}
    class="w-full h-96 rounded-t-xl object-cover"
    loading="eager"
  />
  <div class="w-full">
    <div class="flex flex-col px-12 py-4">
      <h4 class="text-3xl font-bold">{title}</h4>
      <slot />
    </div>
  </div>
</article>

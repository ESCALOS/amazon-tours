---
import type { ImageMetadata } from "astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Props {
  id: number;
  imgPath: string;
  title: string;
  description: string;
  duration: string;
  members: string;
  price: string;
}

const { imgPath, title, description, duration, members, price } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/slide/*.png"
);
if (!images[imgPath])
  throw new Error(
    `"${imgPath}" does not exist in glob: "src/images/slide/*.{png}"`
  );
---

<div class="bg-gray-100 rounded-md px-6 py-4">
  <Image
    src={images[imgPath]()}
    alt={title}
    height={176}
    class="object-cover rounded-lg w-full h-44"
  />
  <div class="pt-8 pb-4">
    <h3 class="text-xl text-primary-500 font-bold">{title}</h3>
    <div class="flex justify-between items-center mt-2 mb-6">
      <div class="flex justify-center items-center">
        <Icon name="clock" size={20} class="text-gray-400" />
        <span class="text-gray-500 ml-2">{duration}</span>
      </div>
      <div class="flex justify-center items-center">
        <Icon name="users" size={20} class="text-gray-400" />
        <span class="text-gray-500 ml-2">{members}</span>
      </div>
    </div>
    <p class="text-gray-500 text-pretty">
      {description}
    </p>
  </div>
  <div class="border border-gray-300 my-4"></div>
  <div class="flex justify-between items-center">
    <p class="text-secondary-500 font-bold">{price}</p>
    <a href="/" aria-label={title}>
      <Icon
        name="angle-right"
        size={28}
        class="text-gray-300 bg-white p-1 rounded-full"
      />
    </a>
  </div>
</div>
